    </div>

    <div id="<?php echo e($uniqid_02); ?>_frame" style="display: none;">
        <iframe src="<?php echo e(url('/')); ?>/assets/admin/fileman/index.html?integration=custom&type=files&txtFieldId=<?php echo e($uniqid_02); ?>"
                style="width:100%;height:100%" frameborder="0">
